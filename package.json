{
    "name": "blink-vscode",
    "displayName": "Blink",
    "description": "Syntax highlighting & intellisense for the Blink IDL.",
    "version": "0.0.1",
    "publisher": "checkraisefold",
    "repository": "https://github.com/checkraisefold/blink-vscode",
    "license": "MIT",
    "engines": {
        "vscode": "^1.93.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "blink",
        "highlighting",
        "syntax",
        "intellisense",
        "support"
    ],
    "contributes": {
        "languages": [
            {
                "id": "blink",
                "aliases": [
                    "Blink",
                    "blink"
                ],
                "extensions": [
                    ".blink"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "dark": "./icons/logo.svg",
                    "light": "./icons/logo.svg"
                }
            }
        ],
        "grammars": [
            {
                "language": "blink",
                "scopeName": "source.blink",
                "path": "./syntaxes/blink.tmLanguage.json"
            }
        ]
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint",
        "watch": "tsc -watch -p ./",
        "grammar:test": "vscode-tmgrammar-test tests/**/*.blink",
        "grammar:snap": "vscode-tmgrammar-snap tests/**/*.blink",
        "grammar:snap-update": "vscode-tmgrammar-snap -u tests/**/*.blink",
        "ci:eslint": "eslint --max-warnings=0 && tsc --noEmit",
        "ci:prettier": "prettier --check ./src",
        "ci:tsc": "tsc --noEmit"
    },
    "devDependencies": {
        "@types/node": "^22.5.4",
        "@types/vscode": "^1.93.0",
        "eslint": "^9.10.0",
        "prettier": "^3.3.3",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.5.0",
        "vscode-tmgrammar-test": "^0.1.3"
    }
}
